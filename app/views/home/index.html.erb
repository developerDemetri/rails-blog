<div class="container">
  <div class="row">
    <h2 class="center-align">Latest Posts:</h2>
  </div>
  <% @posts.each do |post| %>
    <div class="row">
      <div class="card">
            <div class="card-content">
              <span class="card-title"><%= post.title %></span>
              <p><%= post.content %></p>
              <p class="card-stamp right-align"><%= post.updated_at %></p>
            </div>
          </div>
    </div>
  <% end %>
</div>
