<div class="container">
  <div class="row">
    <h3 class="center-align">Latest Posts</h3>
  </div>
  <% @posts.each do |post| %>
    <% @comments = post.comments %>
    <div class="row">
      <div class="card">
          <div class="card-content">
            <span class="card-title"><%= post.title %></span>
            <p><%= post.content %></p>
            <p class="card-stamp right-align"><%= post.updated_at %></p>
          </div>
          <div class="card-action">
            <% @comments.each do |comment| %>
              <p class="left-align"><%= comment.content %> - <strong><%= comment.user %></strong></p>
            <% end %>
            <div class="row">
              <input class="col s8 offset-s1" type="text" placeholder="comments not fuly implemented yet ):" name="<%= post.id %>-comment" id="<%= post.id %>-comment"/><a class="btn-floating waves-effect waves-light"><i class="fa fa-paper-plane btn-fa" aria-hidden="true"></i></a>
            </div>
          </div>
        </div>
    </div>
  <% end %>
</div>
